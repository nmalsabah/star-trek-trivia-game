<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/starrenegades_jr9va"
        android:text="@string/admin_tasks_page"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Dropdown to view all users -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/starrenegades_jr9va"
        android:text="View Users"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/viewUsersSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:prompt="@string/select_user" />

    <!-- Remove User Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/starrenegades_jr9va"
        android:text="Remove Users"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/removeUserSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:prompt="@string/select_user" />

        <Button
            android:id="@+id/removeUserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/starrenegades_jr9va"
            android:onClick="removeUser"
            android:text="Remove" />
    </LinearLayout>

    <!-- Add User Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/starrenegades_jr9va"
        android:text="Add Users"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/newUsernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="New Username" />

    <EditText
        android:id="@+id/newPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/addUserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/starrenegades_jr9va"
        android:onClick="addUser"
        android:text="Add User" />

    <!-- Update User Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/starrenegades_jr9va"
        android:text="Update Users"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/updateUserSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:prompt="@string/select_user" />

    <EditText
        android:id="@+id/updateUsernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Update Username" />

    <EditText
        android:id="@+id/updatePasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Update Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/updateUserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/starrenegades_jr9va"
        android:onClick="updateUser"
        android:text="Update User" />

</LinearLayout>
